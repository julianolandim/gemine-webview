{
  "appId": "com.gemini.ai.desktop",
  "productName": "Gemini AI",
  "directories": {
    "output": "dist-electron"
  },
  "files": [
    "electron/**/*",
    "public/**/*",
    "dist/**/*"
  ],
  "mac": {
    "category": "public.app-category.productivity",
    "icon": "public/gemini-icon.png",
    "target": [
      {
        "target": "dmg",
        "arch": ["x64", "arm64"]
      },
      {
        "target": "zip",
        "arch": ["x64", "arm64"]
      }
    ],
    "minimumSystemVersion": "10.13.0"
  },
  "dmg": {
    "title": "Gemini AI Installer",
    "icon": "public/gemini-icon.png",
    "iconSize": 120,
    "window": {
      "width": 540,
      "height": 380
    },
    "contents": [
      {
        "x": 140,
        "y": 200,
        "type": "file"
      },
      {
        "x": 400,
        "y": 200,
        "type": "link",
        "path": "/Applications"
      }
    ]
  },
  "linux": {
    "target": ["AppImage", "deb"],
    "category": "Utility",
    "icon": "public/gemini-icon.png"
  },
  "win": {
    "target": ["nsis", "portable"],
    "icon": "public/favicon.ico"
  }
}
